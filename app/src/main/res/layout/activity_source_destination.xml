<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SourceDestination">
    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/map_fragment4"
        android:name="com.google.android.gms.maps.MapFragment">


        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="top"
            >
            <android.support.v7.widget.AppCompatEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:hint="Search Sorce Here"
                android:clickable="true"
                android:focusable="true"
                android:padding="10dp"
                android:inputType="none"
                android:background="@drawable/editboxstyle"
                android:id="@+id/source_text"/>
            <android.support.v7.widget.AppCompatEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:inputType=""
                android:background="@drawable/editboxstyle"
                android:hint="Search Destination Here"
                android:clickable="true"
                android:focusable="true"
                android:id="@+id/destination_text"/>
        </android.support.v7.widget.LinearLayoutCompat>
        <android.support.v7.widget.AppCompatImageButton
            android:clickable="true"
            android:background="@drawable/location_off"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:gravity="end"
            android:layout_gravity="bottom"
            android:layout_margin="8dp"
            android:id="@+id/location_button"
            android:focusable="true"></android.support.v7.widget.AppCompatImageButton>

    </fragment>
</RelativeLayout>